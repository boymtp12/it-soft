<div class="modal fade" id="myModal" role="dialog"
     style="padding-right: 0px!important;background: #433e3e61;height: 100%">
    <div class="modal-dialog row"
         style="width: 100%;justify-content: space-around;max-width: 100%;min-width: 200px;padding: 10px;margin: 0;height: 95%;display: flex;align-items: center">

        <!-- Modal content-->
        <div class="modal-content col-xl-6 col-lg-6 col-md-10 col-sm-12" style="max-height: 95%;padding: 0px 0px">
            <div class="modal-header">
                <h5 class="modal-title text-uppercase"><span style="color: #271717;font-weight: bold;font-size: 1.5rem">Đăng ký khóa học</span>
                </h5>
                <button data-bind="click: function(){closeSubWinDow()}" type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body md-bd-rp" style="overflow-y: auto">
                <div class="c-modal-support__inner">
                    <%--                    <div class="c-modal-support__banner"><img--%>
                    <%--                            src="https://spec.edu.vn/client/image/img_java/paneljava.svg"--%>
                    <%--                            alt="banner"></div>--%>
                    <div class="c-modal-support__content">
                        <form class="needs-validation" style="margin-bottom: 0px;" novalidate=""
                              data-bind="submit: btnSaveNew" method="post" id="bootstrapForm">
                            <div class="mauticform_wrapper">
                                <div class="row" data-bind="if: showModal()">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <input data-bind="textInput: fullName" type="text"
                                                   class="form-control"  placeholder="Nhập họ và tên (*)"
                                                   required autocomplete="false">
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là bắt buộc</div>
                                        </div>
                                        <div class="form-group">
                                            <input data-bind="textInput: email" type="text"
                                                   class="form-control"
                                                   pattern="^[a-z][a-z0-9_\.]{3,32}@[a-z0-9]{2,}(\.[a-z0-9]{2,4}){1,2}$"
                                                   placeholder="Nhập email (*)" required autocomplete="false    ">
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là bắt buộc</div>
                                        </div>
                                        <div class="form-group">
                                            <input data-bind="textInput: phoneNumber" type="text"
                                                   class="form-control" pattern="^\+?(?:0|84)(?:\d){9}$"
                                                   placeholder="Nhập số điện thoại (*)" required>
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là bắt buộc</div>
                                        </div>
                                        <div class="form-group">
                                            <input data-bind="textInput: address"
                                                   type="text" class="form-control"
                                                   placeholder="Nhập địa chỉ (*)" required>
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là
                                                bắt buộc
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input data-bind="textInput: dateOfBirth"
                                                   type="text" class="form-control"
                                                   placeholder="Ngày/tháng/năm sinh (*)" type="text"
                                                   onfocus="(this.type='date')" onblur="(this.type='text')"
                                                   required>
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là bắt buộc</div>
                                        </div>
                                        <div class="form-group">
                                            <input data-bind="textInput: jobCurrent" type="text"
                                                   class="form-control"
                                                   placeholder="Nhập công việc hiện tại (*)" required>
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là bắt buộc</div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="form-group">
                                            <input data-bind="textInput: nameSchool" type="text"
                                                   class="form-control"
                                                   placeholder="Nhập tên trường (*)" required>
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là bắt buộc</div>
                                        </div>
                                        <div class="form-group">
                                            <input data-bind="textInput: facultySchool" type="text"
                                                   class="form-control"
                                                   placeholder="Nhập tên khoa (*)" required>
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là bắt buộc</div>
                                        </div>
                                        <div class="form-group">
                                            <input data-bind="textInput: codeGt" type="text"
                                                   class="form-control"
                                                   placeholder="Nhập mã giới thiệu">
                                            <div class="invalid-feedback">Làm ơn nhập. Đây là bắt buộc</div>
                                        </div>
                                        <div class="form-group">
                                            <select data-bind="value: takeCertification" class="custom-select" >
                                                <option value="0">Nhận chứng chỉ tại nhà</option>
                                                <option value="1">Nhận chứng chỉ tại trung tâm</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <select data-bind="value: sex" class="custom-select">
                                                <option value="0">Nam</option>
                                                <option value="1">Nữ</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-around" style="padding: 15px 0px 10px 0px">
                                        <button style="background: #ef8318;font-size: 1.3rem;padding: 7px 35px" type="submit" class="btn btn-success"> Đăng ký</button>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                    <!-- c-modal-support__content -->
                </div>
                <!-- c-modal-support__inner -->
            </div>
            <!-- modal-body -->
        </div>
        <!-- modal-content -->
    </div>
</div>

